<project name="deploy-ejb" default="deploy" basedir="./build-file">
    <property environment="env"/>
    <property name="deploy.dir" value="F:\Program\wildfly-10\standalone\deployments"/>
    <property name="vvFinance-warname" value="vv.war"/>
    <property name="vvFinance-jarname" value="vvFinance-ejb.jar"/>
    <property name="vvFinance-earname" value="vv.ear"/>
    <property name="srcejb-dir" value="./vvFinance-ejb/src/java"/>
    <property name="srcwar-dir" value="./vvFinance-war/src/java"/>
    
    <property name="build-vvFinance-war" value="${basedir}/vv" />
    <property name="build-vvFinance-ejb" value="${basedir}/vvFinance-ejb" />
    <property name="build-vvFinance-lib" value="${basedir}/lib" />
    
    <property name="buildEar.dir" value="${basedir}/ear"/>
    <property name="webcontent.dir" value="../vvFinance-war/web"/>
    
    <path id="classpath">
        <fileset dir="${basedir}\lib">
            <include name="**/*.jar" />
        </fileset>
    </path>
    <target name="clean" >
        <echo>  ------------------ START ---------------- </echo>
            <echo>JDK ${ant.java.version}  ${ant.version}  </echo>
        <echo> clean </echo>
        
        <delete file="${build-vvFinance-ejb}" />
        <delete file="${build-vvFinance-war}" />
        <delete file="${build-vvFinance-lib}" />
        <delete file="${basedir}/${vvFinance-earname}" />
        <delete file="${buildEar.dir}/${vvFinance-earname}" />
		
        <echo> clean done </echo>
    </target>
	
    <tstamp>
	  <format property="dateDuJour" pattern="dd/MM/yyyy hh:mm aa" />
	</tstamp>
	
    <target name="init" depends="clean">
        <echo> initialisation ${dateDuJour} </echo>
        <mkdir dir="${build-vvFinance-war}"/>
        <mkdir dir="${build-vvFinance-war}/WEB-INF"/>
        <mkdir dir="${build-vvFinance-war}/WEB-INF/lib"/>
        <mkdir dir="${build-vvFinance-war}/WEB-INF/classes"/>
        <mkdir dir="${build-vvFinance-war}/WEB-INF/classes/META-INF"/>
        <mkdir dir="${build-vvFinance-ejb}"/>
        <echo file="${webcontent.dir}/dateBuild.txt" append="false" message="${dateDuJour}" />
        <copy todir="${build-vvFinance-war}/">
            <fileset dir="${webcontent.dir}" excludes="WEB-INF/**"/>
        </copy>
        <copy todir="${build-vvFinance-war}/WEB-INF/lib/">
            <fileset dir="${basedir}\lib" />
        </copy>
        <copy file="../vvFinance-ejb/src/java/vvFinance.properties" tofile="${build-vvFinance-ejb}/vvFinance.properties" />
        <echo>  initialisation done </echo>
    </target>
	
    <target name="compile" depends="init">
        <echo> compilation </echo>	
        <javac srcdir="../vvFinance-ejb/src/java" destdir="${build-vvFinance-ejb}" nowarn="true" debug="on" deprecation="off" classpathref="classpath" includeantruntime="false">
        </javac>
        <copy todir="${build-vvFinance-ejb}/i18n">
            <fileset dir="../vvFinance-ejb/src/java/i18n" includes="**/*.properties" />
        </copy>
        <echo> compilation done </echo>	
    </target>
    
    <target name="buildEjbJar" depends="compile">
        <echo>Build EJB JAR</echo>
        <jar basedir="${build-vvFinance-ejb}" destfile="${buildEar.dir}/${vvFinance-jarname}" />
        <copy file="${buildEar.dir}/${vvFinance-jarname}" todir="${build-vvFinance-war}/WEB-INF/lib/">
        </copy>
        <echo>End Build EJB JAR</echo>
    </target>

    <target name="compileWar" depends="buildEjbJar">
        <echo> compilation </echo>
        <javac srcdir="../vvFinance-war/src/java" destdir="${build-vvFinance-war}/WEB-INF/classes/" nowarn="true" debug="on" deprecation="off" classpathref="classpath" includeantruntime="false">
            <classpath>
                <pathelement location="${buildEar.dir}/${vvFinance-jarname}" />
            </classpath>
        </javac>
        <echo> compilation done</echo>
    </target>
	
	
    <target name="deploy" depends="compileWar">	
	   <echo>${env.JBOSS_HOME}</echo>
        <copy todir="${deploy.dir}/montessori.war">
            <fileset dir="${build-vvFinance-war}" >
                <include name="**/*"/>
            </fileset>	
        </copy>
        <echo> deployement exploded war done </echo>	
        <echo> ------------------------- DONE --------------------- </echo>
    </target>	
</project>